extends layout 

block content 

    h1 #{title}

    p Are you sure you wish to delete this Post?

    hr
    p #{message.title}
    p #{message.text}
    hr

    form(method='POST')
        div.form-group
            input#messageid.form-control(type='hidden', name='messageid', value=message._id)
        button.btn.btn-primary(type='submit') Delete